@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<PageTitle>BlazorFrontend</PageTitle>

<RadzenLayout>
    <RadzenHeader>
        <RadzenRow JustifyContent="JustifyContent.SpaceBetween" AlignItems="AlignItems.Center" Gap="0">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
                <RadzenSidebarToggle Click="@(() => _sidebarExpanded = !_sidebarExpanded)"/>
                <RadzenLink Text="Online School" Path="@NavigationManager.BaseUri"></RadzenLink>
            </RadzenStack>
        </RadzenRow>
    </RadzenHeader>
    <RadzenSidebar @bind-Expanded="@_sidebarExpanded">
        <NavMenu/>
    </RadzenSidebar>
    <RadzenBody>
        <div class="rz-p-4">
            @Body
        </div>
    </RadzenBody>
</RadzenLayout>

@code {
    private bool _sidebarExpanded;
}
